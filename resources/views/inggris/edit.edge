<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
  <title>Data Posts</title>
</head>
<body>

<div class="container" style="margin-top: 80px">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          EDIT POSTS BAHASA INGGRIS
        </div>
        <div class="card-body">
          <form action="{{ route('inggris.update', {id : inggris.id}) }}" method="POST">
            <div class="form-group">
              <label>TITLE</label>
              <input class="form-control" type="text" name="name" value="{{inggris.name}}" placeholder="Masukkan Judul Post">
            </div>
              <label>RUMUS</label>
              <input class="form-control" type="text" name="formula" value="{{inggris.formula}}" placeholder="Masukkan  Rumus">
            </div>
            <div class="form-group">
              <label>CONTOH</label>
              <textarea class="form-control" name="example"rows="5" placeholder="Masukkan Contoh">{{inggris.example}}</textarea>
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-md btn-success">SIMPAN</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
</body>
</html>